{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "client",
    "description": "The client schema",
    "required": [
        "name",
        "url",
        "password",
        "email"
    ],
    "additionalProperties": true,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the client."
        },
        "name": {
            "$id": "#/properties/name",
            "type": "string",
            "title": "The clients name"
        },
        "email": {
            "$id": "#/properties/email",
            "type": "string",
            "title": "The clients email"
        },
        "password": {
            "$id": "#/properties/password",
            "type": "string",
            "title": "The client hashed password."
        },
        "url": {
            "$id": "#/properties/url",
            "type": "string",
            "title": "the client application url"
        },
        "status_id": {
            "$id": "#/properties/status_id",
            "type": "integer",
            "title": "The status of the client."
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date of the client."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date the client was last updated."
        }
    }
}