{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "title": "loan request",
    "description": "The loan request schema",
    "required": [
        "customer_number",
        "amount"
    ],
    "additionalProperties": true,
    "properties": {
        "id": {
            "$id": "#/properties/id",
            "type": "integer",
            "title": "The database ID of the loan request."
        },
        "customer_number": {
            "$id": "#/properties/customer_number",
            "type": "string",
            "title": "The loan request customer_number"
        },
        "amount": {
            "$id": "#/properties/amount",
            "type": "number",
            "title": "The loan request amount"
        },
        "customer_score": {
            "$id": "#/properties/customer_score",
            "type": "number",
            "title": "The loan request customer_score"
        },
        "customer_limit": {
            "$id": "#/properties/customer_limit",
            "type": "number",
            "title": "The loan request customer_limit"
        },
        "created_at": {
            "$id": "#/properties/created_at",
            "type": "string",
            "title": "The creation date of the loan request."
        },
        "updated_at": {
            "$id": "#/properties/updated_at",
            "type": "string",
            "title": "The date the loan request was last updated."
        }
    }
}